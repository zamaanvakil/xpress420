<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swlab.xpress420.OrderConfirmedActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/order_confirmed" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="21dp"
        android:text="Order confirmed"
        android:textAlignment="center"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Thank you for choosing us!"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/poop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Your order id is:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/delivery_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="@string/standard_delivery_message"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/view_all_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="View all orders"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/order_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
